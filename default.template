<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TGFC Fixtures Output</title>
    </head>
    <body>
        {%- for location in locations %}

        <h1>Table for Location {{ location.location }}</h1>

        <table class="table-fixed w-full text-sm">
            <thead class="text-white text-left">
                <tr class="bg-gray-800">
                    <th scope="col" class="pl-2 py-1">Competition</th>
                    <th scope="col" class="py-1">Opponent</th>
                    <th scope="col" class="py-1 w-40">Time</th>
                </tr>
            </thead>

            {%- for date in location.days %}
            <thead>
                <tr class="bg-purple-700">
                    <th scope="row" colspan="3" class="pl-2 py-3 font-normal">{{ date.date }}</th>
                </tr>
            </thead>

            <tbody>
                {%- for fixture in date.fixtures %}
                <tr class="bg-white border-b border-gray-200">
                    <th scope="row" class="pl-2 py-2 text-left">{{ fixture.competition }}</th>
                    <td class="td-logo {{ fixture.class }}">{{ fixture.opponent }}</td>
                    <td>{{ fixture.time }}</td>
                </tr>
                {%- endfor %}
            </tbody>
            {%- endfor %}
        </table>

        {%- endfor %}
    </body>
</html>
